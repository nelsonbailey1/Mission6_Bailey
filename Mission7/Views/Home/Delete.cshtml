@model Movie

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Confirm Deletion</title>
</head>
<body>
<div>
    <h1>Confirm Deletion</h1>
    <h3>@Model.Title, @Model.Year</h3>
    <form method="post">
        
        <input type="hidden" asp-for="MovieId"/>
        <button type="submit">Delete</button>
        <a class="btn btn-info" asp-controller="Home" asp-action="Dictionary">Cancel</a>
    </form>
</div>
</body>
</html>